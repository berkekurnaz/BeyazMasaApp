@model IEnumerable<BeyazMasa.Entity.Concrete.BirimYoneticiler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBirim.cshtml";
}

<script src="https://webthemez.com/demo/brilliant-free-bootstrap-admin-template/assets/js/jquery-1.10.2.js"></script>
<script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
</script>

<div class="header">
    <h1 class="page-header">
        Anasayfa <small>Hoşgeldiniz Deneme Belediyesi Birimi</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#">Beyaz Masa</a></li>
        <li><a href="#">Birim Yöneticiler</a></li>
        <li class="active">Liste</li>
    </ol>
</div>
<div id="page-inner">

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Birim Yöneticileri Tablosu
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="dataTables-example" class="table table-striped table-bordered table-hover">
                            <thead class="text-center">
                                <tr>
                                    <th class="text-center">Numara</th>
                                    <th class="text-center">Kullanıcı Adı</th>
                                    <th class="text-center">Şifre</th>
                                    <th class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td>@item.Id</td>
                                        <td>@item.KullaniciAdi</td>
                                        <td>@item.Sifre</td>
                                        <td>
                                            <a href="/BirimYoneticiler/Guncelle/@item.Id" class="btn btn-success"><i class="fa fa-pencil" aria-hidden="true"></i> Güncelle</a>
                                            <a href="/BirimYoneticiler/Sil/@item.Id" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>

</div>