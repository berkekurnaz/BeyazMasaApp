@model BeyazMasa.Entity.Concrete.SistemYoneticiler
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_LayoutSistem.cshtml";
}

<div class="container-fluid text-center">

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Sistem Yöneticisi Ekleme
        </div>
        <div class="card-body">

            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label for="exampleInputPassword1">Kullanıcı Adı</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>
                        <input type="text" class="form-control" id="KullaniciAdi" name="KullaniciAdi" placeholder="Kullanıcı Adını Buraya Gir...">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Şifre</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>
                        <input type="text" class="form-control" id="Sifre" name="Sifre" placeholder="Şifreyi Buraya Gir...">
                    </div>
                </div>

                <button type="submit" class="btn btn-outline-info"><i class="fas fa-plus-circle"></i> Yeni Sistem Yöneticisi Ekle</button>
            }




        </div>
        <div class="card-footer small text-muted">Son Güncelleme Tarihi : @DateTime.Now</div>

    </div>
</div>


