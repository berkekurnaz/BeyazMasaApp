@using System.Data
@using System.Data.SqlClient
@model System.Data.DataTable

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBelediye.cshtml";
}

<script src="https://webthemez.com/demo/brilliant-free-bootstrap-admin-template/assets/js/jquery-1.10.2.js"></script>
<script>
    $(document).ready(function () {
        $('#dataTables-example').dataTable();
    });
</script>

<div class="header">
    <h1 class="page-header">
        Anasayfa <small>Hoşgeldiniz Deneme Belediyesi</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#">Beyaz Masa</a></li>
        <li><a href="#">Başvurular</a></li>
        <li class="active">Liste</li>
    </ol>
</div>
<div id="page-inner">

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Başvurular Tablosu
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="dataTables-example" class="table table-striped table-bordered table-hover">
                            <thead class="text-center">
                                <tr>
                                    <th class="text-center">Gönderen Vatandaş</th>
                                    <th class="text-center">Birim</th>
                                    <th class="text-center">Tarih</th>
                                    <th class="text-center">Başlık</th>
                                    <th class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @foreach (DataRow dr in Model.Rows)
                                {
                                    <tr class="odd gradeX">
                                        <td>@dr["VatandasIsim"].ToString()  @dr["VatandasSoyad"].ToString()</td>
                                        <td>@dr["BirimAd"].ToString()</td>
                                        <td>@dr["Tarih"].ToString()</td>
                                        @if (dr["Baslik"].ToString().Length > 10)
                                        {
                                        <td>@dr["Baslik"].ToString().Substring(0,10)</td>
                                        }
                                        else
                                        {
                                        <td>@dr["Baslik"].ToString()</td>
                                        }
                                        <td>
                                            <a href="/BelediyeBasvurular/Incele/@dr["Id"].ToString()" class="btn btn-info"><i class="fa fa-pencil" aria-hidden="true"></i> İncele</a>
                                            <a href="/BelediyeBasvurular/Guncelle/@dr["Id"].ToString()" class="btn btn-success"><i class="fa fa-pencil" aria-hidden="true"></i> Güncelle</a>
                                            <a href="/BelediyeBasvurular/Sil/@dr["Id"].ToString()" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Sil</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>

</div>



