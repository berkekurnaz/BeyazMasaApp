
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBirim.cshtml";
}

<div class="header">
    <h1 class="page-header">
        Anasayfa <small>Hoşgeldiniz Deneme Belediyesi</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#">Beyaz Masa</a></li>
        <li><a href="#">Anasayfa</a></li>
        <li class="active">İstatistikler</li>
    </ol>

</div>
<div id="page-inner">

    <!-- Istatistikler -->
    <div class="row">
        <div class="col-md-3 col-sm-12 col-xs-12">
            <div class="board">
                <div class="panel panel-primary">
                    <div class="number">
                        <h3>
                            <h3>0</h3>
                            <small>Başvuru Sayısı</small>
                        </h3>
                    </div>
                    <div class="icon">
                        <i class="fa fa-eye fa-5x red"></i>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-12 col-xs-12">
            <div class="board">
                <div class="panel panel-primary">
                    <div class="number">
                        <h3>
                            <h3>0</h3>
                            <small>Vatandaş Sayısı</small>
                        </h3>
                    </div>
                    <div class="icon">
                        <i class="fa fa-shopping-cart fa-5x blue"></i>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-12 col-xs-12">
            <div class="board">
                <div class="panel panel-primary">
                    <div class="number">
                        <h3>
                            <h3>0</h3>
                            <small>BİRİM Sayısı</small>
                        </h3>
                    </div>
                    <div class="icon">
                        <i class="fa fa-comments fa-5x green"></i>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-md-3 col-sm-12 col-xs-12">
            <div class="board">
                <div class="panel panel-primary">
                    <div class="number">
                        <h3>
                            <h3>0</h3>
                            <small>Duyuru Sayısı</small>
                        </h3>
                    </div>
                    <div class="icon">
                        <i class="fa fa-user fa-5x yellow"></i>
                    </div>

                </div>
            </div>
        </div>

    </div>


    <div class="row">

        <div class="col-md-8 col-sm-8">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Duyurular
                </div>
                <div class="panel-body">

                </div>
                <div class="panel-footer">
                    Detaylı Listelemek İçin <a href="/Belediye/Duyurular">Tıklayın</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 col-sm-4 text-center">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Tarih Zaman
                </div>
                <div class="panel-body">
                    <p>
                        Yıl : @DateTime.Now.Year <br />
                        Ay : @DateTime.Now.Month <br />
                        Gün : @DateTime.Now.Day <br />
                        Tarih : @DateTime.Now.ToShortDateString() <br />
                    </p>
                </div>
                <div class="panel-footer">
                    Son Güncelleme : @DateTime.Now
                </div>
            </div>
        </div>

    </div>

</div>




