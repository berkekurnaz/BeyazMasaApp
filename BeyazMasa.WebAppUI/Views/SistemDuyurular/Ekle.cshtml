@model BeyazMasa.Entity.Concrete.Duyurular
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_LayoutSistem.cshtml";
}

<div class="container-fluid text-center">

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Duyuru Ekleme
        </div>
        <div class="card-body">

            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label for="exampleInputPassword1">Duyuru Başlık</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>
                        <input type="text" class="form-control" id="Baslik" name="Baslik" placeholder="Duyurunun Başlığını Buraya Gir...">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Duyuru Açıklaması</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>
                        <input type="text" class="form-control" id="Icerik" name="Icerik" placeholder="Duyurunun Açıklamasını Buraya Gir...">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Duyuru Eklenme Tarihi</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>
                        <input type="text" class="form-control" id="Tarih" name="Tarih" placeholder="Örnek / 03.03.2018">
                    </div>
                </div>

                <button type="submit" class="btn btn-outline-info"><i class="fas fa-plus-circle"></i> Yeni Duyuru Ekle</button>
            }




        </div>
        <div class="card-footer small text-muted">Son Güncelleme Tarihi : @DateTime.Now</div>

    </div>
</div>


