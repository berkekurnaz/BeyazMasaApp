@model BeyazMasa.Entity.Concrete.Iletisim
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_LayoutSistem.cshtml";
}

<div class="container-fluid text-center">

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            İletişim Mesajı Güncelleme
        </div>
        <div class="card-body">

            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label for="exampleInputPassword1">Ad Soyad</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>
                        <input type="text" class="form-control" id="AdSoyad" name="AdSoyad" value="@Model.AdSoyad">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Mail Adresi</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>
                        <input type="text" class="form-control" id="Mail" name="Mail" value="@Model.Mail">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Telefon</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>
                        <input type="text" class="form-control" id="Telefon" name="Telefon" value="@Model.Telefon">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Mesaj</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>
                        <input type="text" class="form-control" id="Mesaj" name="Mesaj" value="@Model.Mesaj">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">İçerik</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>
                        <textarea class="form-control" id="Icerik" name="Icerik" rows="5">@Model.Icerik</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Gönderim Tarihi</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>
                        <input type="text" class="form-control" id="Tarih" name="Tarih" value="@Model.Tarih">
                    </div>
                </div>

                <button type="submit" class="btn btn-outline-success"><i class="fas fa-plus-circle"></i> Mesaj Güncelle</button>
            }




        </div>
        <div class="card-footer small text-muted">Son Güncelleme Tarihi : @DateTime.Now</div>

    </div>
</div>
