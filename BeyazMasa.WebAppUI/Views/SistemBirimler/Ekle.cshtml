@model BeyazMasa.Entity.Concrete.Birimler
@{
    ViewBag.Title = "Ekle";
    Layout = "~/Views/Shared/_LayoutSistem.cshtml";
}

<div class="container-fluid text-center">

    <div class="card mb-3">
        <div class="card-header">
            <i class="fas fa-table"></i>
            Birim Ekleme
        </div>
        <div class="card-body">

            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <label for="exampleInputPassword1">Birim Adı</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>
                        <input type="text" class="form-control" id="BirimAd" name="BirimAd" placeholder="Birimin Adını Buraya Gir...">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Birim Açıklaması</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>
                        <input type="text" class="form-control" id="BirimAciklama" name="BirimAciklama" placeholder="Birimin Açıklamasını Buraya Gir...">
                    </div>
                </div>
                <div class="form-group">
                    <label for="exampleInputPassword1">Birim Belediye Id</label>
                    <div class="input-group mb-2">
                        <div class="input-group-prepend">
                            <div class="input-group-text"><i class="fas fa-building"></i></div>
                        </div>

                        @Html.DropDownList("BelediyeId", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <button type="submit" class="btn btn-outline-info"><i class="fas fa-plus-circle"></i> Yeni Birim Ekle</button>
            }




        </div>
        <div class="card-footer small text-muted">Son Güncelleme Tarihi : @DateTime.Now</div>

    </div>
</div>

