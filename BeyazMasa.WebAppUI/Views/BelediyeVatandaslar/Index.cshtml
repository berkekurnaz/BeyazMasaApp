@model IEnumerable<BeyazMasa.Entity.Concrete.Vatandaslar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBelediye.cshtml";
}

<script src="https://webthemez.com/demo/brilliant-free-bootstrap-admin-template/assets/js/jquery-1.10.2.js"></script>
<script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
</script>

<div class="header">
    <h1 class="page-header">
        Anasayfa <small>Hoşgeldiniz Deneme Belediyesi</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#">Beyaz Masa</a></li>
        <li><a href="#">Vatandaşlar</a></li>
        <li class="active">Liste</li>
    </ol>
</div>
<div id="page-inner">

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Vatandaşlar Tablosu
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="dataTables-example" class="table table-striped table-bordered table-hover">
                            <thead class="text-center">
                                <tr>
                                    <th class="text-center">İsim</th>
                                    <th class="text-center">Soyisim</th>
                                    <th class="text-center">TC Kimlik</th>
                                    <th class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @foreach (var item in Model)
                                {
                                <tr class="odd gradeX">
                                    <td>@item.VatandasIsim</td>
                                    <td>@item.VatandasSoyad</td>
                                    <td>@item.VatandasTc</td>
                                    <td>
                                        <a href="/BelediyeVatandaslar/Incele/@item.Id" class="btn btn-info"><i class="fa fa-pencil" aria-hidden="true"></i> İncele</a>
                                        <a href="/BelediyeVatandaslar/Guncelle/@item.Id" class="btn btn-success"><i class="fa fa-pencil" aria-hidden="true"></i> Güncelle</a>
                                        <a href="/BelediyeVatandaslar/Sil/@item.Id" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Sil</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>

</div>


