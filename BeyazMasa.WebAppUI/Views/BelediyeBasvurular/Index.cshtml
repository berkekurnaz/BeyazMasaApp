@model IEnumerable<BeyazMasa.Entity.Concrete.Basvurular>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutBelediye.cshtml";
}

<script src="https://webthemez.com/demo/brilliant-free-bootstrap-admin-template/assets/js/jquery-1.10.2.js"></script>
<script>
        $(document).ready(function () {
            $('#dataTables-example').dataTable();
        });
</script>

<div class="header">
    <h1 class="page-header">
        Anasayfa <small>Hoşgeldiniz Deneme Belediyesi</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#">Beyaz Masa</a></li>
        <li><a href="#">Başvurular</a></li>
        <li class="active">Liste</li>
    </ol>
</div>
<div id="page-inner">

    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <div class="panel panel-default">
                <div class="panel-heading">
                    Başvurular Tablosu
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table id="dataTables-example" class="table table-striped table-bordered table-hover">
                            <thead class="text-center">
                                <tr>
                                    <th class="text-center">Gönderen Vatandaş</th>
                                    <th class="text-center">Birim</th>
                                    <th class="text-center">Tarih</th>
                                    <th class="text-center">Başlık</th>
                                    <th class="text-center">İşlemler</th>
                                </tr>
                            </thead>
                            <tbody class="text-center">
                                @foreach (var item in Model)
                                {
                                <tr class="odd gradeX">
                                    <td>@item.VatandasId</td>
                                    <td>@item.BirimId</td>
                                    <td>@item.Tarih</td>
                                    @if (item.Baslik.Length > 20)
                                    {
                                        <td>@item.Baslik.Substring(0,20)</td>
                                    }
                                    else
                                    {
                                        <td>@item.Baslik</td>
                                    }
                                    <td>
                                        <a href="/BelediyeBasvurular/Incele/@item.Id" class="btn btn-info"><i class="fa fa-pencil" aria-hidden="true"></i> İncele</a>
                                        <a href="/BelediyeBasvurular/Guncelle/@item.Id" class="btn btn-success"><i class="fa fa-pencil" aria-hidden="true"></i> Güncelle</a>
                                        <a href="/BelediyeBasvurular/Sil/@item.Id" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Sil</a>
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>

</div>



