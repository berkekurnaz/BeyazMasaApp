@model BeyazMasa.Entity.Concrete.BelediyeYoneticiler
@{
    ViewBag.Title = "Guncelle";
    Layout = "~/Views/Shared/_LayoutBelediye.cshtml";
}

<div class="header">
    <h1 class="page-header">
        Anasayfa <small>Hoşgeldiniz Deneme Belediyesi</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#">Beyaz Masa</a></li>
        <li><a href="#">Belediye Yöneticiler</a></li>
        <li class="active">Güncelle</li>
    </ol>
</div>
<div id="page-inner">

    <div class="row">

        <div class="col-md-12">

            <div class="panel panel-default">
                <div class="panel-heading">
                    <div class="card-title">
                        <div class="title">Belediye Yöneticisi Güncelleme</div>
                    </div>
                </div>
                <div class="panel-body text-center">
                    @using (Html.BeginForm())
                    {
                        <div class="sub-title">Kullanıcı Adı</div>
                        <div>
                            <input type="text" class="form-control" id="KullaniciAdi" name="KullaniciAdi" value="@Model.KullaniciAdi">
                        </div>
                        <div class="sub-title">Şifre</div>
                        <div>
                            <input type="text" class="form-control" id="Sifre" name="Sifre" value="@Model.Sifre">
                        </div>
                        <br />
                        <center><button type="submit" class="btn btn-success"><i class="fa fa-plus" aria-hidden="true"></i> Yönetici Güncelle</button></center>
                    }
                </div>
            </div>

        </div>

    </div>

</div>



